<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
        xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0
        http://maven.apache.org/xsd/assembly-2.0.0.xsd"
>
    <id>release</id>

    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>libext</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>com.dwarfeng:familyhelper-plugin*</include>
                <include>com.dwarfeng:notify*</include>
                <include>javax.ws.rs:*</include>
                <include>org.jboss.resteasy:*</include>
                <include>org.apache.httpcomponents:*</include>
                <include>org.reactivestreams:*</include>
                <include>org.jboss.spec.javax.annotation:*</include>
                <include>com.sun.mail:*</include>
                <include>org.apache.james:*</include>
                <include>commons-io:*</include>
                <include>com.dwarfeng:voucher*</include>
                <include>com.dwarfeng:account-keeper*</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <outputDirectory>confext</outputDirectory>
            <directory>src/main/resources/confext</directory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>optext</outputDirectory>
            <directory>src/main/resources/optext</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../README.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../CHANGELOG.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../LICENSE</source>
            <fileMode>0644</fileMode>
        </file>
    </files>
</assembly>
